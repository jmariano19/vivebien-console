# ViveBien Dashboard - Environment Configuration
# Copy this file to .env.local and fill in your values

# Database Connection
# For local development, you need to expose postgres port in Easypanel
# Go to: Easypanel → postgress → Expose → Enable port 5432
DATABASE_URL=postgres://postgres:YOUR_PASSWORD@YOUR_SERVER_IP:5432/projecto-1

# Database Schema
# Use 'test' for staging, 'public' for production (or leave empty for public)
DB_SCHEMA=test

# Mock Data Mode (optional)
# Set to 'true' to use fake data without database connection
# Useful for UI-only development
USE_MOCK_DATA=false
